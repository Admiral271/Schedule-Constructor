    <script>
        document.querySelectorAll("#my-container img").forEach((img) => {
            img.addEventListener("click", () => {
                // Get the modal elements
                let modal = document.querySelector(".modal");
                let modalTitle = document.querySelector(".modal-card-title");
                let modalBody = document.querySelector(".modal-card-body");
                let modalClose = document.querySelector(".modal .delete");

                // Set the content of the modal
                modalTitle.textContent = img.getAttribute("alt");
                modalBody.innerHTML = `<figure class="image is-128x128" style="margin: 0 auto;"><img src="${img.getAttribute("src")}" alt="${img.getAttribute("alt")}" title="${img.getAttribute("title")}"></figure><br>${img.getAttribute("title")}`;

                // Show the modal
                modal.classList.add("is-active");

                // Handle clicks on the modal close button
                modalClose.addEventListener("click", () => {
                    modal.classList.remove("is-active");
                });
            });
        });
</script>