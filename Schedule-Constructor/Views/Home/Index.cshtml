<script>
    $(function () {
        let originalText = [];

        // Настройка изображений
        $("#my-container img").each(function (index) {
            originalText.push($(this).attr("title"));
            $(this).removeAttr("title");
            $(this).css({
                cursor: "pointer",
                transition: "transform 0.2s"
            });

            // Обработка событий мыши
            $(this).on("mouseenter", function () {
                $(this).css("transform", "scale(1.2)");
            });
            $(this).on("mouseleave", function () {
                $(this).css("transform", "scale(1)");
            });

            // Открытие модального окна при клике на изображение
            $(this).on("click", function () {
                let modal = $("<div></div>");
                modal.css({
                    position: "fixed",
                    top: 0,
                    left: 0,
                    width: "100%",
                    height: "100%",
                    backgroundColor: "rgba(0, 0, 0, 0.5)",
                    display: "flex",
                    alignItems: "center",
                    justifyContent: "center"
                });
                let modalContent = $("<div></div>");
                modalContent.css({
                    position: "relative",
                    backgroundColor: "#fff",
                    padding: "20px",
                    borderRadius: "10px",
                    boxShadow:
                        "0px 10px 15px -3px rgba(0,0,0,0.1), 0px 4px 6px -2px rgba(0,0,0,0.05)",
                    display: "flex",
                    alignItems: "center"
                });
                let modalImg = $("<img>");
                modalImg.attr({
                    src: $(this).attr("src"),
                    alt: $(this).attr("alt"),
                    width: 150,
                    height: 150
                });
                let text = originalText[index];
                let p = $("<p></p>").text(text);
                p.css({
                    marginLeft: "20px",
                    color: "#333"
                });
                modalContent.append(modalImg);
                modalContent.append(p);
                let closeBtn = $("<button>×</button>");
                closeBtn.css({
                    position: "absolute",
                    top: "0px",
                    right: "0px",
                    width: "45px",
                    height: "35px",
                    borderRadius: "0 10px 0 10px",
                    backgroundColor: "#f00",
                    color: "#fff",
                    fontSize: "35px", 
                    fontWeight: "bold",
                    textAlign: "center",
                    lineHeight: "0px", 
                    cursor: "pointer",
                    border: "none",
                    padding: "0 3px" 
                });
                closeBtn.on("click", function () {
                    modal.remove();
                });
                modalContent.append(closeBtn);
                modal.append(modalContent);
                $("body").append(modal);
            });
        });
    });

</script>