@model Schedule_Constructor.Models.DataModels.Group

@{
    ViewData["Title"] = "Удаление расписания";
}

<h1>Удаление расписания</h1>

<h4>Вы уверены, что хотите удалить расписание для группы "@Model.Name"?</h4>
<hr />

<form asp-action="ScheduleDeleteConfirmed" method="post">
    <input type="hidden" name="groupId" value="@Model.Id" />
    <div class="form-group">
        <input type="submit" value="Удалить" class="btn btn-danger" /> 
        <a asp-action="Schedules" asp-controller="ScheduleData" class="btn btn-primary">Назад к списку</a>
    </div>
</form>
